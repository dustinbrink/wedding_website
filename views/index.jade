extends layout

block content
    h1= title
    p Welcome to #{title}
    form(action='/', method='post')
        div(data-role='fieldcontain')
            fieldset(data-role='controlgroup')
                label(for='name') Name
                    input(id='name',type='text',value='',placeholder='name',name='name')
        div(data-role='fieldcontain')
            fieldset(data-role='controlgroup')
                label(for='guests') # of Guests
                    input(id='guests',type='text',value='',placeholder='#',name='guests')
        div(data-role='fieldcontain')
            input(type='submit',value='RSVP',data-transition='fade', data-theme='c')

